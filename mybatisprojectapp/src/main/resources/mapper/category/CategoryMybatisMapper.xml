<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mybatisprojectapp.Category.CategoryMybatisMapper">

    <insert id="insert" parameterType="CategoryDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category_tb( name )
        VALUES ( #{name} )
    </insert>

    <update id="update" parameterType="CategoryDto">
        UPDATE category_tb
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <select id="findById" resultType="CategoryDto">
        SELECT id
             , name
        FROM category_tb
        WHERE id = #{id}
    </select>
    <delete id="deleteById">
        DELETE FROM category_tb
        WHERE id = #{id}
    </delete>
    <select id = "findByName" resultType = "CategoryDto">
        SELECT id
            , name
        FROM category_tb
        WHERE name = #{name}
    </select>
    <select id="findAll" resultType="CategoryDto">
        SELECT id
            , name
        FROM category_tb
    </select>
    <select id="findAllByNameContains" resultType="CategoryDto">
        SELECT id
            , name
        FROM category_tb
        WHERE name like '%${name}%'
    </select>
</mapper>