<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mybatisprojectapp.Category.CatecoryMybatisMapper">

    <insert id="insert" parameterType="CategoryDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category_tb1( name )
        VALUES ( #{name} )
    </insert>

    <update id="update" parameterType="CategoryDto">
        UPDATE category_tb1
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM category_tb1
        WHERE id = #{id}
    </delete>

    <select id="findById" resultType="com.mybatis.mybatisprojectapp.Category.CatecoryMybatisMapper">
        SELECT
            id, name
        FROM category_tb1
        WHERE id = #{id}
    </select>

    <select id="findBySearch" parameterType="searchCategoryDto" resultType="egovMap">
        SELECT
        id, name
        FROM category_tb1
        WHERE 1=1
        <if test="searchCondition != null">
            <choose>
                <when test="searchCondition == 0">
                    AND	name LIKE '%' || #{name} || '%'
                </when>
                <when test="searchCondition == 1">
                    AND	name LIKE '' || #{name} || '%'
                </when>
            </choose>
        </if>
        ORDER BY id DESC
        LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
    </select>

</mapper>